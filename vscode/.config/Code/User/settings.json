{
  // General settings.
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontSize": 19,
  "editor.formatOnSave": true,
  "editor.lineHeight": 24,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": true,
  "extensions.ignoreRecommendations": true,
  "files.enableTrash": false,
  "files.hotExit": "off",
  "files.insertFinalNewline": true,
  "security.workspace.trust.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "fish",
  "update.mode": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  // Color theme.
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.colorCustomizations": {
    "[GitHub Light Default]": {
      "editorCursor.background": "#ffffff",
      "editorCursor.foreground": "#044289",
      "terminalCursor.background": "#ffffff",
      "terminalCursor.foreground": "#044289"
    }
  },

  // Language-specific settings.
  "[cabal][haskell]": {
    "editor.tabSize": 2
  },
  "[css][html][json][jsonc][less][scss][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[toml]": {
    "editor.tabSize": 2
  },
  "[xml]": {
    "editor.tabSize": 2
  },

  // Git.
  "git.allowForcePush": true,

  // Haskell.
  "haskell.plugin.ghcide-completions.config.snippetsOn": false,

  // Python.
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,

  // shell-format.
  "shellformat.flag": "--indent=2 --case-indent --binary-next-line",

  // Typescript.
  "typescript.surveys.enabled": false,

  // Vim.
  "vim.hlsearch": true,
  "vim.leader": "<Space>",
  "vim.replaceWithRegister": true,
  "vim.smartcase": false,
  "vim.startofline": false,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["Y"],
      "after": ["y", "$"],
      "silent": true
    },
    {
      "before": ["<Tab>"],
      "after": ["C-^"],
      "silent": true
    },
    {
      "before": ["[", "<Space>"],
      "after": ["O", "<Esc>", "j", "0"],
      "silent": true
    },
    {
      "before": ["]", "<Space>"],
      "after": ["o", "<Esc>", "k", "0"],
      "silent": true
    },
    {
      "before": ["[", "b"],
      "commands": ["workbench.action.previousEditor"],
      "silent": true
    },
    {
      "before": ["]", "b"],
      "commands": ["workbench.action.nextEditor"],
      "silent": true
    },
    {
      "before": ["[", "c"],
      "commands": [
        "workbench.action.editor.previousChange",
        "workbench.action.compareEditor.previousChange"
      ],
      "silent": true
    },
    {
      "before": ["]", "c"],
      "commands": [
        "workbench.action.editor.nextChange",
        "workbench.action.compareEditor.nextChange"
      ],
      "silent": true
    },
    {
      "before": ["[", "e"],
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    },
    {
      "before": ["]", "e"],
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["[", "q"],
      "commands": ["search.action.focusPreviousSearchResult"],
      "silent": true
    },
    {
      "before": ["]", "q"],
      "commands": ["search.action.focusNextSearchResult"],
      "silent": true
    },
    {
      "before": ["<Leader>", "<Leader>"],
      "commands": [":nohl"],
      "silent": true
    },
    {
      "before": ["<Leader>", "w"],
      "commands": ["workbench.action.files.save"],
      "silent": true
    },
    {
      "before": ["<Leader>", "/"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    },
    {
      "before": ["<Leader>", "*"],
      "after": ["v", "i", "w"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    },
    {
      "before": ["<C-H>"],
      "after": ["<C-W>", "h"],
      "commands": ["workbench.action.compareEditor.focusSecondarySide"],
      "silent": true
    },
    {
      "before": ["<C-J>"],
      "after": ["<C-W>", "j"],
      "silent": true
    },
    {
      "before": ["<C-K>"],
      "after": ["<C-W>", "k"],
      "silent": true
    },
    {
      "before": ["<C-L>"],
      "after": ["<C-W>", "l"],
      "commands": ["workbench.action.compareEditor.focusPrimarySide"],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["[", "e"],
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    },
    {
      "before": ["]", "e"],
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["<Leader>", "*"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    }
  ]
}
