{
  // General settings.
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontSize": 19,
  "editor.formatOnSave": true,
  "editor.lineHeight": 24,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": true,
  "editor.stickyScroll.enabled": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  "files.enableTrash": false,
  "files.hotExit": "off",
  "files.insertFinalNewline": true,
  "security.workspace.trust.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.commandsToSkipShell": ["-workbench.action.quickOpen"],
  "terminal.integrated.defaultProfile.linux": "fish",
  "update.mode": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  // Color theme.
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.colorCustomizations": {
    "[GitHub Light Default]": {
      "editorCursor.background": "#ffffff",
      "editorCursor.foreground": "#044289",
      "terminalCursor.background": "#ffffff",
      "terminalCursor.foreground": "#044289"
    }
  },

  // Language-specific settings.
  "[cabal][haskell]": {
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[css][less][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[json][jsonc][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[lua]": {
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [88],
    "editor.tabSize": 4
  },
  "[shellscript]": {
    "editor.rulers": [80],
    "editor.tabSize": 2
  },
  "[xml]": {
    "editor.tabSize": 2
  },

  // Auto Close Tag.
  "auto-close-tag.activationOnLanguage": [
    "html",
    "javascriptreact",
    "typescriptreact",
    "xml"
  ],

  // Bash IDE.
  "bashIde.shfmt.binaryNextLine": true,
  "bashIde.shfmt.caseIndent": true,

  // CMake Tools.
  "cmake.configureOnOpen": true,
  "cmake.showOptionsMovedNotification": false,

  // Git.
  "git.allowForcePush": true,

  // Haskell.
  "haskell.plugin.ghcide-completions.config.snippetsOn": false,

  // HTML.
  // NOTE: Disable built-in close tag support since it doesn't work well with
  // nvim-surround plugin, e.g. with "yswt".
  "html.autoClosingTags": false,

  // isort.
  "isort.args": ["--profile", "black"],

  // Pylint.
  "pylint.args": ["--max-line-length=88"],

  // Typescript.
  "typescript.surveys.enabled": false,

  // VSCode Neovim.
  "vscode-neovim.revealCursorScrollLine": true
}
