# Set font used for Zathura GUI
set font "Liberation Mono 14"

# Set "hybrid"-like colorscheme
set completion-bg "#282a2e"
set completion-fg "#c5c8c6"
set completion-group-bg "#1d1f21"
set completion-group-fg "#ffffff"
set completion-highlight-bg "#f0c674"
set completion-highlight-fg "#282a2e"
set default-bg "#1d1f21"
set default-fg "#c5c8c6"
set highlight-color "#ff8000"
set highlight-active-color "#ffef00"
set index-bg "#1d1f21"
set index-fg "#c5c8c6"
set index-active-bg "#282a2e"
set index-active-fg "#c5c8c6"
set inputbar-bg "#1d1f21"
set inputbar-fg "#c5c8c6"
set notification-bg "#1d1f21"
set notification-fg "#b5bd68"
set notification-error-bg "#1d1f21"
set notification-error-fg "#cc6666"
set notification-warning-bg "#1d1f21"
set notification-warning-fg "#f0c674"
set tabbar-bg "#282a2e"
set tabbar-fg "#c5c8c6"
set tabbar-focus-bg "#373b41"
set tabbar-focus-fg "#f0c674"
set statusbar-bg "#1d1f21"
set statusbar-fg "#ffffff"

# Define the maximum number of pages kept in the page cache
# This is needed to reduce Zathura memory consumption
set page-cache-size 3

# When opening a new document, fit it to the window width
set adjust-open "width"

# Display a small gap between pages
set page-padding 8

# Don't show the full path in window title and status bar
set window-title-basename true
set statusbar-basename true
