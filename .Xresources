! ------------------------------------------------------------------------------
! Common settings
! ------------------------------------------------------------------------------

*background: #1D1F21
*foreground: #C5C8C6

*color0: #282A2E
*color1: #A54242
*color2: #8C9440
*color3: #DE935F
*color4: #5F819D
*color5: #85678F
*color6: #5E8D87
*color7: #707880
*color8: #373B41
*color9: #CC6666
*color10: #B5BD68
*color11: #F0C674
*color12: #81A2BE
*color13: #B294BB
*color14: #8ABEB7
*color15: #C5C8C6

! ------------------------------------------------------------------------------
! Xft settings
! ------------------------------------------------------------------------------

Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! ------------------------------------------------------------------------------
! URxvt settings
! ------------------------------------------------------------------------------

URxvt*.font: xft:Literation Mono Nerd Font:size=14

URxvt*.letterSpace: -1

URxvt*.saveLines: 8192

URxvt*.cursorBlink: false

URxvt*.internalBorder: 0

URxvt*.scrollBar: false
URxvt*.jumpScroll: true
URxvt*.scrollTtyOutput: false
URxvt*.scrollWithBuffer: true
URxvt*.scrollTtyKeypress: true

URxvt*.iso14755: false
URxvt*.iso14755_52: false

! ------------------------------------------------------------------------------
! URxvt extensions
! ------------------------------------------------------------------------------

URxvt*.perl-ext-common: default,matcher

URxvt*.url-launcher: /usr/bin/xdg-open
URxvt*.matcher.button: 2

! ------------------------------------------------------------------------------
! Xterm settings
! ------------------------------------------------------------------------------

xterm*.faceName: Literation Mono Nerd Font
xterm*.faceSize: 14
